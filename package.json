{
  "name": "data_graph",
  "version": "0.1.1",
  "description": "build graph",
  "dependencies": {
    "d3": "^3.5.6",
    "font-awesome": "^4.4.0",
    "intro.js": "^1.1.1",
    "jquery": "^2.1.4",
    "marked": "^0.3.5",
    "normalize.css": "^3.0.3",
    "nouislider": "leongersen/noUiSlider",
    "underscore": "^1.8.3",
    "vue": "^0.12.12"
  },
  "devDependencies": {
    "browser-sync": "^2.8.2",
    "browserify": "^11.0.1",
    "chai": "^3.2.0",
    "chokidar-cli": "^1.0.1",
    "clean-css": "^3.4.1",
    "mocha": "^2.3.2",
    "uglify-js": "^2.4.24"
  },
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf public/*",
    "prebuild": "mkdir -p public/ && npm run clean -s",
    "build": "npm run build:assets -s && npm run build:styles -s && npm run build:scripts -s ",
    "build:assets": "cp -r app/assets/* public",
    "build:scripts": "mkdir -p public/js && browserify -d app/js/viz.js -o public/js/viz.js && browserify -d app/js/viz_clean.js -o public/js/viz_clean.js && browserify -d app/js/editor.js -o public/js/editor.js",
    "build:styles": "mkdir -p public/css && npm run build:styles:normalize; npm run build:styles:all; npm run build:styles:cleancss",
    "build:styles:normalize": "cat node_modules/normalize.css/normalize.css > public/css/app.css",
    "build:styles:all": "find  app/styles/ -name \"*.css\" -exec cat {} \\; >> public/css/app.css",
    "build:styles:cleancss": "cleancss -o public/css/app.css public/css/app.css",
    "watch": "npm run watch:assets & npm run watch:styles & npm run watch:scripts & npm run sync",
    "watch:assets": "chokidar 'app/assets/**/*' -c 'echo `date` && npm run build:assets -s'",
    "watch:styles": "chokidar 'app/styles/**/*.css' -c 'echo `date` && npm run build:styles -s'",
    "watch:scripts": "chokidar 'app/js/**/*.js' -c 'echo `date` && npm run build:scripts -s'",
    "dev": "npm run build && npm run watch",
    "sync": "browser-sync start --server public --files \"public/*/*, public/*\"",
    "sync2": "http-server public/"
  },
  "author": "mejjjor <mejjjor@gmail.com>",
  "private": true,
  "license": "MIT"
}
